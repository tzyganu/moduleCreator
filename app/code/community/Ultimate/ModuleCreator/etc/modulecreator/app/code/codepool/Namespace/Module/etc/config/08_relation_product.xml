		<events>
			<core_block_abstract_prepare_layout_after>
				<observers>
					<{{entity}}>
						<type>singleton</type>
						<class>{{module}}/adminhtml_observer</class>
						<method>add{{Entity}}Block</method>
					</{{entity}}>
				</observers>
			</core_block_abstract_prepare_layout_after>
			<catalog_product_save_after>
				<observers>
					<{{entity}}>
						<type>singleton</type>
						<class>{{module}}/adminhtml_observer</class>
						<method>save{{Entity}}Data</method>
					</{{entity}}>
				</observers>
			</catalog_product_save_after>
		</events>
